<Window x:Class="WpfDataViewer.Help"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDataViewer"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d"
        Title="Help" Height="450" Width="800" Activated="Window_Activated">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFBDF6FF" Offset="0"/>
            <GradientStop Color="#FF00A0B9" Offset="0.218"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="253" Margin="10,22,0,0" VerticalAlignment="Top" Width="772">
            <Label Content="Quick Start Guide" FontSize="43" Foreground="White"/>
            <Label x:Name="lbl_Instructions" Height="188"  Content="TextBox" Foreground="White" Background="{x:Null}"/>
        </StackPanel>
        <syncfusion:ButtonAdv Margin="706,363,21,20" Label="Close" Background="{x:Null}" Foreground="White" BorderThickness="3" BorderBrush="{x:Null}" IconHeight="0" IconWidth="0" Click="ButtonAdv_Click"/>
    </Grid>
</Window>
